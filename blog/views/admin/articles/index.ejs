<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
     integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Lista de Artigos</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body >
    <nav>
        <ul>
            <li><a href="/admin/categories">Categorias</a></li>
            <li><a href="/admin/articles">Artigos</a></li>
            <li><a href="/admin/user">Contas</a></li>
            <li></li>
            <li><a href=""></a></li>
        </ul>
    </nav>
    <div class="container">
        <a style="float: right;" class="button1" href="/logout">Sair</a>
        <br>
        <h2 style="color: white;"> Artigos Criados</h2>
        <br>
        <a href="/admin/articles/new"><button class="btn btn-info">Add novo Artigo</button></a>
        <br>
        <br>
        <table class="table table-bordered">
            <thead class="table">
                <tr>
                    <td style="color:white;"> ID</td>
                    <td style="color:white;"> TITULO</td>
                    <td style="color:white;"> SLUG</td>
                    <td style="color:white;"> CATGORIA</td>
                    <td style="color:white;"> AÇÕES</td>
                </tr>
            </thead>
           
                
                <% articles.forEach(articles => { %>
                    <tbody>
                    
                    <th style="color:white;"> <%= articles.id%> </th>
                    <th style="color:white;"> <%= articles.title %> </th>
                    <th style="color:white;"> <%= articles.slug %> </th>
                    <th style="color:white;"> <%= articles.categoryId %></th>
                    <th style="color:white;">

                        <a href="/admin/articles/edit/<%= articles.id %>" class="btn btn-info" >Editar</a>

                        <form action="/articles/delete" method="POST" style="display: inline;" onsubmit="confirmaDelecao(event, this)" >

                        <input  type="hidden" name="id" value=" <%= articles.id %> ">
                        <button class="btn btn-danger">Deletar</button>

                        </form>

                </tbody>
                <% }) %>
        </table>
    </div>
</body>


<script>
    function confirmaDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Você quer deletar o Artigo?");
        if(decision){
            form.submit();
        }else{
            console.log("foi um erro ")
        }
    }
</script>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
</html>