<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/admin/categories">Categorias</a></li>
            <li><a href="/admin/articles">Artigos</a></li>
            <li><a href="/admin/user">Contas</a></li>
            <li><a href="/admin/users/create">Nova Conta</a></li>
            <li><a href=""></a></li>
        </ul>
    </nav>

    <div class="container">
    <table class="table table-bordered" style="margin-top: 20px;">
        <thead class="table">
            <tr>
                <td style="color:white;"> EMAIL</td>
                <td style="color:white;"> SENHA</td>
                <td style="color:white;"> AÇÃO</td>
            </tr>
        </thead>
       
            
            <% users.forEach(users => { %>
                <tbody>
                
                <th style="color:white;"> <%= users.email %> </th>
                <th style="color:white;"> <%= users.password %> </th>
                <th>
                    <a href="/admin/articles/edit/<%= users.id %>" class="btn btn-info" >Editar</a>

                    <form action="/articles/delete" method="POST" style="display: inline;" onsubmit="confirmaDelecao(event, this)" >

                    <input  type="hidden" name="id" value=" <%= users.id %> ">
                    <button class="btn btn-danger">Deletar</button>
                </th>
                    </form>

            </tbody>
            <% }) %>
    </table>

</div>
    
</body>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
